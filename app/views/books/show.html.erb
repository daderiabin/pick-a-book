<p>
  <%= link_to 'Products', books_path %> > <%= link_to @book.book_format.name, book_format_path(@book.book_format) %> > <%= link_to @book.title, book_path(@book) %>
</p>
<h1><%= @book.title %></h1>

<%# <%= image_tag @book.small %> %>

<div>
  <p>Format: <%= @book.book_format.name %></p>
  <p>Published: <%= @book.year %></p>
  <p>Price: <%= @book.price.to_s %></p>
  <p>
    Genre(s):
    <% @book.genres.each do |genre| %>
        <%= link_to genre.name, genre %>
    <% end %>
  </p>
</div>