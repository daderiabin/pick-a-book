  <h2>Order from: <%= @order.created_at %> </h2> - <strong><%= @status %></strong>
  <table>
    <tr>
      <th>Title</th>
      <th>Quantity</th>
      <th>Item Price</th>
      <th>Item Total</th>
    </tr>
    <% @order.line_items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.quantity %></td>
        <td><%= number_to_currency item.price %></td>
        <td><%= number_to_currency item.price * item.quantity %></td>
      </tr>
    <% end %>
  </table>
  <p><strong>Subtotal:</strong> <%= number_to_currency @order.sub_total %> </p>
  <p><strong>HST:</strong> <%= number_to_currency @order.sub_total * @order.hst %> </p>
  <p><strong>GST:</strong> <%= number_to_currency @order.sub_total * @order.gst %> </p>
  <p><strong>PST:</strong> <%= number_to_currency @order.sub_total * @order.pst %> </p>
